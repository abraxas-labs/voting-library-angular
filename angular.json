{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "voting-lib": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/abraxas/voting-lib",
      "sourceRoot": "projects/abraxas/voting-lib/src",
      "prefix": "vo-lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/abraxas/voting-lib/tsconfig.lib.json",
            "project": "projects/abraxas/voting-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/abraxas/voting-lib/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/**/*.ts", "projects/**/*.component.html"]
          }
        }
      }
    }
  },
  "defaultProject": "voting-lib"
}
